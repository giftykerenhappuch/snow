{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",
        "username": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().length > 0"
        }
      }
    },

    "products": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.admin === true", 
      "$productId": {
        ".validate": "newData.child('name').isString() && newData.child('price').isNumber()",
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "price": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        }
      }
    },

    "orders": {
      "$orderId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || auth.token.admin === true)",
        ".write": "auth != null && data.child('userId').val() === auth.uid",
        "userId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "products": {
          ".validate": "newData.exists() && newData.child('items').exists() && newData.child('items').hasChildren()"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() === 'pending' || newData.val() === 'shipped' || newData.val() === 'delivered')"
        }
      }
    }
  }
}
